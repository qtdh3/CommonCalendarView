<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorAccent"
        android:gravity="center"
        android:orientation="horizontal"
        >

        <ImageButton
            android:id="@+id/left_month_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_keyboard_arrow_left_black_36dp"/>

        <TextView
            android:id="@+id/month_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text="06/2017"
            android:textColor="@android:color/black"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <ImageButton
            android:id="@+id/right_month_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_chevron_right_black_36dp"/>
    </LinearLayout>

    <View
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#e1e1e1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:orientation="horizontal"
        android:background="@color/darkGrayBg">

        <TextView
            style="@style/tv_DaysOfWeek"
            android:text="S"/>

        <TextView
            style="@style/tv_DaysOfWeek"
            android:text="M"/>

        <TextView
            style="@style/tv_DaysOfWeek"
            android:text="T"/>

        <TextView
            style="@style/tv_DaysOfWeek"
            android:text="W"/>

        <TextView
            style="@style/tv_DaysOfWeek"
            android:text="T"/>

        <TextView
            style="@style/tv_DaysOfWeek"
            android:text="F"/>

        <TextView
            style="@style/tv_DaysOfWeek"
            android:text="S"/>
    </LinearLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="220dp"
        android:layout_height="200dp"
        android:background="@drawable/shape_corner_down"/>
</LinearLayout>
